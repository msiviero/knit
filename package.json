{
  "name": "@msiviero/knit-di",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/msiviero/knit-di"
  },
  "keywords": [
    "nodejs",
    "dependency injection",
    "decorators",
    "typescript"
  ],
  "description": "Simple typescript dependency injection container and decorators",
  "scripts": {
    "compile": "npm run-script clean && tsc -p ./tsconfig.build.json",
    "test": "jest --detectOpenHandles",
    "lint": "tslint -c ./tslint.json -p tsconfig.json",
    "clean": "rimraf dist",
    "prepare": "npm run-script lint && npm run-script compile"
  },
  "jest": {
    "globals": {
      "tsConfigFile": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts)"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/supertest": "^2.0.7",
    "@types/jest": "^23.3.0",
    "jest": "^23.6.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1"
  },
  "dependencies": {
    "express": "^4.16.4",
    "fastify": "^1.14.1",
    "reflect-metadata": "^0.1.13",
    "supertest": "^3.4.2"
  }
}
