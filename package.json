{
  "name": "@msiviero/knit",
  "version": "1.1.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/msiviero/knit"
  },
  "keywords": [
    "nodejs",
    "dependency injection",
    "decorators",
    "typescript"
  ],
  "description": "Simple typescript dependency injection container and decorators",
  "scripts": {
    "build": "npm run-script clean && tsc -p ./tsconfig.build.json",
    "test": "jest --detectOpenHandles",
    "lint": "tslint -c ./tslint.json -p tsconfig.json",
    "clean": "rimraf dist",
    "deploy": "npm run-script lint && npm run-script build && npm publish --access public"
  },
  "jest": {
    "globals": {
      "tsConfigFile": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts)"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "^24.0.6",
    "@types/node": "^11.9.5",
    "@types/pino": "^5.8.5",
    "@types/supertest": "^2.0.7",
    "jest": "^24.1.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1"
  },
  "dependencies": {
    "fastify": "^2.0.0",
    "pino-pretty": "^2.5.0",
    "reflect-metadata": "^0.1.13",
    "supertest": "^3.4.2"
  }
}